<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderPage"
    android:background="@color/black">


        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="728dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="147dp"
                android:layout_height="152dp"
                android:layout_marginBottom="10dp"
                tools:srcCompat="@tools:sample/avatars"
                android:layout_marginLeft="125dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="Name:"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/namemealorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="Price:"

                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/pricemealorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:text="Descreption:"

                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/descreptionmealorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"></TextView>



                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:hint="Comment"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginStart="130dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:text="-"
                    android:onClick="minus_order"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/numberoforders"
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:text="+"
                    android:onClick="plus_order"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="T O T A L  P R I C E : "
                    android:textSize="25dp"
                    android:textColor="@color/white"></TextView>
            <TextView
                android:id="@+id/totalprice"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:text="0.00"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text=" L . E"
                    android:textColor="@color/white"
                    android:textSize="25dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/order_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginStart="70dp"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="true"
                    android:onClick="Order"
                    android:text="O R D E R  N O W"
                    android:textColor="@color/black" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:backgroundTint="#FFFFFF"
                android:clickable="true"
                android:text="A d d  t o  c a r t"
                android:layout_marginLeft="20dp"
                android:onClick="addtocart"
                android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>
</LinearLayout>